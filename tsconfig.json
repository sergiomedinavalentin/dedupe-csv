{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es2016",
    "module": "commonjs",
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "./lib",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "lib": [
      "es6",
      "dom",
    ],
  },
  "include": [
    "./src/*.ts",
    "./lib/*.ts",
    ".eslintrc.js",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/__tests__/*"
  ],
}